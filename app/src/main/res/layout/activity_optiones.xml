<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tesoro"
    tools:context=".OptionesActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="#00EDE3E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="Agregar Preguntas"
            android:textColor="#0C0C0C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="552dp"
            android:backgroundTint="#F6F0F0"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="Jugar"
            android:textColor="#121111"
            android:textSize="24sp"
            android:translationY="-290dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="Elija la opcion que desea ejecutar:"
            android:textAlignment="center"
            android:textColor="#0B0A0A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationY="20dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>